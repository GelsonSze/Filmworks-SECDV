<div class = "sign_inform">
                <!--<img src = "/images/icons/cameraleft.png" class = "icons">-->
                <form id = "loginform" action = "/update-movie-timeslot" method = "POST">
                    <h2 class = "divh2">ADD TIMESLOT</h2>
                    <label for="movie_id" class = "normal"><b>MOVIE TITLE</b></label>
                    <input type="text" id = "movie_title" autocomplete = "off" placeholder="Enter movie title" name="movie_title" required>
                    <label for="timeslots" class = "normal">Movie Timeslot</label>
                    <select name="time_slots" id="time_slots">
                        {{#each time}}
                            {{> timeslots}}
                        {{/each}}
                    </select>
                    <br>
                    <input type="submit" id = "commentButton" value = "ADD MOVIE TIMESLOT">
                </form>
</div>